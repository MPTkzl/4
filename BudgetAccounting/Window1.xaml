<Window x:Class="BudgetAccounting.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetAccounting"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="68"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="309*"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="341*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="input" Grid.ColumnSpan="3" Margin="0,174,0,0" Grid.RowSpan="2"/>
        <Button 
            x:Name="OkButton"
            Grid.Column="1" Grid.Row="3"
            Content="ОК" Click="Button_Click" FontSize="25" Margin="29,17,29,17"/>
        <TextBlock  FontSize="30" HorizontalAlignment="Left" Margin="256,87,0,0" TextWrapping="Wrap" Text="Введите тип записи" VerticalAlignment="Top" Grid.ColumnSpan="3" Grid.RowSpan="1" Width="288" Height="40"/>
    </Grid>
</Window>
